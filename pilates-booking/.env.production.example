# Production Environment Configuration Template
# CRITICAL: All values MUST be changed from defaults before deployment

# Database Configuration - REQUIRED
DATABASE_URL=postgresql://secure_db_user:CHANGE_PASSWORD@your-prod-db-host:5432/pilates_db

# Redis Configuration - REQUIRED
REDIS_URL=redis://your-prod-redis-host:6379

# Security - CRITICAL: Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_TO_SECURE_64_CHAR_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Email verification
EMAIL_VERIFICATION_EXPIRE_MINUTES=10

# Password reset
PASSWORD_RESET_EXPIRE_HOURS=1

# Email Configuration - REQUIRED for production
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-secure-app-password

# Application Configuration
ENVIRONMENT=production
DEBUG=false
# CRITICAL: Only list YOUR specific production domains, NO wildcards
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
API_V1_STR=/api/v1
PROJECT_NAME=Pilates Booking System

# Business rules
MAX_BOOKINGS_PER_WEEK=10
CANCELLATION_HOURS_LIMIT=2
WAITLIST_AUTO_PROMOTION=true

# Timezone
DEFAULT_TIMEZONE=Asia/Jerusalem

# Stripe Configuration - REQUIRED: Use LIVE keys in production
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_endpoint_secret
STRIPE_CURRENCY=ils
STRIPE_MONTHLY_SUBSCRIPTION_PRICE_ID=price_your_live_monthly_price_id

# Security Headers (add these to your reverse proxy/CDN)
# X-Content-Type-Options: nosniff
# X-Frame-Options: DENY
# X-XSS-Protection: 1; mode=block
# Strict-Transport-Security: max-age=31536000; includeSubDomains