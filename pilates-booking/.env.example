# Copy this file to .env and update the values below

# Database Configuration - REQUIRED
DATABASE_URL=postgresql://pilates_user:pilates_password@localhost:5432/pilates_db

# Redis Configuration - REQUIRED  
REDIS_URL=redis://localhost:6379

# Security - REQUIRED: Generate secure random key with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Email verification
EMAIL_VERIFICATION_EXPIRE_MINUTES=10

# Password reset
PASSWORD_RESET_EXPIRE_HOURS=1

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Application Configuration
ENVIRONMENT=development
DEBUG=true
# Development CORS - for production, list specific domains only, no wildcards
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://10.100.102.24:19006,http://10.0.2.2:8000
API_V1_STR=/api/v1
PROJECT_NAME=Pilates Booking System

# Business rules
MAX_BOOKINGS_PER_WEEK=10
CANCELLATION_HOURS_LIMIT=2
WAITLIST_AUTO_PROMOTION=true

# Timezone
DEFAULT_TIMEZONE=Asia/Jerusalem

# Stripe Configuration - REQUIRED for payments
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=ils
STRIPE_MONTHLY_SUBSCRIPTION_PRICE_ID=price_your_monthly_price_id_here